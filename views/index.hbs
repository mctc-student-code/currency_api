<h1>Currency Converter</h1>

<form action="/convert">
  <label for="from_currency">Convert from</label>
  <input type="number" step="any" name="principle" id="principle" required/>
  <select name="from_currency" id="from_currency" /required>
    <option value="USD">US dollars</option>
    <option value="EUR">Euros</option>
    <option value="JPY">Japanese Yen</option>
  </select>

  <br>

  <label for="to_currency">Convert to</label>
  <select name="to_currency" id="to_currency" /required>
    <option value="EUR">Euros</option>
    <option value="CNY">Chinese Yuan</option>
    <option value="JPY">Japanese Yen</option>
    <option value="USD">US dollars</option>
  </select>

  <br>

  <button type="submit">Convert</button>

</form>
